<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Button" parent="Widget.Material3.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">24sp</item>

        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>

    </style>
    <style name="grai.button" parent="Base.Button">
        <item name="backgroundTint"> @color/graiOpen</item>
        <item name="android:textColor"> @color/black</item>

    </style>

    <style name="orange.button" parent="Base.Button">
        <item name="backgroundTint"> @color/orange</item>
        <item name="android:textColor"> @color/white</item>

    </style>
    <style name="blue.button" parent="Base.Button">
        <item name="backgroundTint"> @color/blue</item>
        <item name="android:textColor"> @color/white</item>

    </style>
</resources>